@model IEnumerable<Hrm.Domain.ViewModels.Vacation.VacationPlanModel>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Vacancy plan";
}

@if (Model is not null)
{
    foreach(var group in Model.GroupBy(x => x.CrerateAt))
    {
        <div class="card-header d-flex justify-content-between">
            <h5 class="card-title">Recommended vacation plan. Generated by: @group.Key.ToString("dd.MM.yyyy hh:mm:ss")</h5>
        </div>
        <div class="card-body">

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Employee</th>
                        <th scope="col">Period</th>
                        <th scope="col">Days</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in group)
                    {
                        <tr>
                            <td>@item.UserName</td>
                            <td>@item.DateFrom.ToShortDateString() - @item.DateTo.ToShortDateString()</td>
                            <td>@((item.DateTo - item.DateFrom).Days+1)</td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    }
    
}
<a class="add-btn" asp-area="" asp-controller="Vacation" asp-action="GeneratePlan"><i class="bi bi-plus-circle-fill"></i></a>
